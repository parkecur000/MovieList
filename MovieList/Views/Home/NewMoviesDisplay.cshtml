@{
    ViewBag.Title = "Recently Added Movies";
}
@model IEnumerable<MovieList.Models.Movies>

<div>
    <h2>Here are the most recently added movies</h2>
    <table>
        <thead>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To:</th>
                <th>Notes</th>
            </tr>
        </thead>

        <tbody>
            @foreach (MovieList.Models.Movies x in Model)
            {
                @if (x.title != "Independence Day")
                {
                    <tr>
                        <td>@x.category</td>
                        <td>@x.title</td>
                        <td>@x.year</td>
                        <td>@x.director</td>
                        <td>@x.rating</td>
                        <td>@x.edited</td>
                        <td>@x.lent_to</td>
                        <td>@x.notes</td>
                    </tr>
                 }
             }
        </tbody>
    </table>
</div>